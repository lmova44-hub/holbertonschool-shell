#!/usr/bin/env bash
# This script manages the manage_my_process daemon with start, stop and restart commands

PID_FILE="/var/run/my_process.pid"

case "$1" in
    start)
        /bin/bash ./manage_my_process &
        echo "$!" > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PID_FILE" ]; then
            kill "$(< "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        if [ -f "$PID_FILE" ]; then
            kill "$(< "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        /bin/bash ./manage_my_process &
        echo "$!" > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
