#!/usr/bin/env bash
# 11-manage_my_process: simple init script for manage_my_process

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="./manage_my_process"

case "$1" in
    start)
        $PROCESS_SCRIPT &              # proses background-da start
        echo $! > "$PID_FILE"          # yaz PID fayla
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PID_FILE" ]; then
            kill $(cat "$PID_FILE")    # prosesi dayandır
            rm -f "$PID_FILE"          # PID faylını sil
            echo "manage_my_process stopped"
        else
            echo "PID file not found, process may not be running"
        fi
        ;;
    restart)
        if [ -f "$PID_FILE" ]; then
            kill $(cat "$PID_FILE")
            rm -f "$PID_FILE"
        fi
        $PROCESS_SCRIPT &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
